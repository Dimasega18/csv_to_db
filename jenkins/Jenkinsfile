pipeline {
    agent any
    environment {
                    dbms = 'postgresql'
                    tbname = 'data_hotel'
                    dbname = 'cobaaja'
                    USER = credentials('user')
                    HOST = credentials('host')
                    PASS = credentials('password')
                    PORT = credentials('port')
                }

    stages {
        stage('Run Python') {
            steps {
                sh ('python3 main.py -db $dbms -u $USER -hs $HOST -ps $PASS -p $PORT -n $dbname -tbname $tbname')
            }
        }
    }

    post {
        always {
            echo "Ini terus di post"
        }
    }   
}